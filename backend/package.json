    "@types/express": "^5.0.6",
    "@types/node": "^25.2.0",
    "@types/supertest": "^6.0.3",
    "drizzle-kit": "^0.31.8",
    "supertest": "^7.2.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
